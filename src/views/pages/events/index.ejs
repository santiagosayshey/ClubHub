<div id="view-attendees" class="modal fade" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-event-id="<%= eventDetails.event_id %>">
</div>

<div class="container mt-4">
    <div class="row d-flex h-100">
        <div class="col-sm-8 content-column d-flex">
            <div class="p-4 text-bg-light rounded-3 w-100">
                <h1><%= eventDetails.event_name %></h1>
                <p><%- eventDetails.event_description %></p>
            </div>
        </div>
        <div class="col-sm-4 d-flex">
            <div class="d-flex flex-column h-100 list-group flex-grow-1">
                <li class="list-group-item bg-light font-weight-bold">
                    <h4>Event Details</h4>
                </li>
                <li class="list-group-item bg-light d-flex align-items-center justify-content-between">
                    <span id="attendee-count">
                        <i class="bi bi-people-fill"></i> <span id="attendee-number"><%= attendeeCount %></span> <%= attendeeCount == 1 ? 'person' : 'people' %> attending
                    </span>
                    <% if (user.role === 'Admin' || clubManagers.some(manager => manager.user_id === user.user_id)) { %>
                    <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#view-attendees">
                        <i class="bi bi-eye-fill"></i>
                    </button>
                    <% }; %>
                </li>
                <li class="list-group-item bg-light">
                    <strong>Hosted by: </strong><a href="/club/<%= eventDetails.club_id %>" class="club-link"><%= eventDetails.club_name %></a>
                </li>
                <li class="list-group-item bg-light">
                    <strong>Location: </strong><%= eventDetails.event_location %>
                </li>
                <li class="list-group-item bg-light">
                    <strong>Date: </strong><%= eventDetails.event_date %>
                </li>
                <li class="list-group-item bg-light">
                    <strong>Time: </strong><%= eventDetails.event_time %>
                </li>
                <li class="list-group-item bg-light">
                    <strong>Event Organizer Info: </strong><%= eventDetails.event_organizer_info %>
                </li>
            </ul>
            <div class="mt-3">
                <button id="rsvp-button" class="btn <%= user.rsvp_status === 'Going' ? 'btn-success' : 'btn-outline-success' %> w-100" type="submit"><%= user.rsvp_status %></button>
            </div>
        </div>
    </div>
</div>

<script src="/<%= scriptPath %>"></script>