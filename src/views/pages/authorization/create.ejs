<div class="vh-100 d-flex justify-content-center align-items-center">
	<div class="container">
		<div class="row d-flex justify-content-center">
			<div class="col-12 col-lg-6">
				<div class="card bg-white">
					<div class="card-body p-5">
						<form class="mb-3">
							<% if (errorMessage) { %>
							<div class="mb-3">
								<div class="alert alert-danger" role="alert">
									<%= errorMessage %>
								</div>
							</div>
							<% } %>
							<div class="mb-3">
								<h3>ClubHub</h3>
							</div>
                            <div class="mb-3">
								<label for="email" class="form-label ">Firstname</label>
								<input type="email" class="form-control" id="firstname" placeholder="Firstname">
							</div>
                            <div class="mb-3">
								<label for="email" class="form-label ">Lastname</label>
								<input type="email" class="form-control" id="lastname" placeholder="Lastname">
							</div>
							<div class="mb-3">
								<label for="email" class="form-label ">Email address</label>
								<input type="email" class="form-control" id="email" placeholder="Email">
							</div>
							<div class="mb-3">
								<label for="password" class="form-label ">Password</label>
								<input type="password" class="form-control" id="password" placeholder="Password">
							</div>
							<div class="d-grid">
								<button id="login" class="btn btn-success" type="submit">Create Account</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script src="/<%= scriptPath %>"></script>
