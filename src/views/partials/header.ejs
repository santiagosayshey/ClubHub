<header>
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
        <div class="container">
            <% if (typeof user !== 'undefined') { %>
                <a class="navbar-brand nav-link" href="/dashboard">
                    <img src="/static/images/icon.svg" alt="Logo" style="width: 30px; height: auto;">
                    ClubHub
                </a>
            <% } else { %>
                <a class="navbar-brand nav-link" href="/">
                    <img src="/static/images/icon.svg" alt="Logo" style="width: 30px; height: auto;">
                    ClubHub
                </a>
            <% } %>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                </ul>
                <% if (typeof user !== 'undefined') { %>
                <a class="nav-link text-light" href="/account/<%= user.user_id %>">
                    <span class="username"><%= user.first_name %> <%= user.last_name %></span>
                    <img src="/static/images/uploads/<%= user.profile_picture %>" class="avatar navAvatar rounded-4 ms-3" style="width: 50px;" alt="Avatar" onerror="this.src='/static/images/default_avatar.png';">
                </a>
                <% } else { %>
                    <form class="d-flex" role="search">
                        <a href="/login" class="btn btn-light shadown-none text-dark">Login</a>
                        <a href="/login/create" class="btn btn-primary  ms-3 text-light" type="submit">Sign up</a>
                      </form>
                <% } %>
            </div>
        </div>
    </nav>
</header>